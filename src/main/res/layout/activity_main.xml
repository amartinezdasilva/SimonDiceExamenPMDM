<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.aaron.secuenciacolores.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="jugar"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_gravity="center"
            android:id="@+id/jugar"
            android:background="#00008b"
            android:textColor="#ffffff"
            android:onClick="eventoBotonJugar"
            android:elevation="0dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="2"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">
            <Button
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:background="@color/verde1"
                android:onClick="eventoVerde"
                android:id="@+id/verde" />

            <Button
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:id="@+id/rojo"
                android:onClick="eventoRojo"
                android:background="@color/rojo1" />

            <Button
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:id="@+id/azul"
                android:onClick="eventoAzul"
                android:background="@color/azul1" />

            <Button
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:id="@+id/amarillo"
                android:onClick="eventoAmarillo"
                android:background="@color/amarillo1" />
        </GridLayout>
    </LinearLayout>

</RelativeLayout>
